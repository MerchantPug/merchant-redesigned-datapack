{
    "type": "origins:multiple",
    "set_scores": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:area_of_effect",
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:in_tag",
                    "tag": "merchantpug:zombies"
                }
            },
            "bientity_action": {
                "type": "origins:actor_action",
                "action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:execute_command",
                            "command": "tag @s add merchant.villager_paired"
                        }
                    ]
                }
            }
        },
        "interval": 1
    },
    "handler": {
        "type": "origins:action_when_hit",
        "bientity_condition": {
            "type": "origins:actor_condition",
            "condition": {
                "type": "origins:in_tag",
                "tag": "merchantpug:zombies"
            }
        },
        "bientity_action": {
            "type": "origins:target_action",
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:health",
                                    "compare_to": 0,
                                    "comparison": "=="
                                },
                                {
                                    "type": "origins:command",
                                    "command": "execute if score @e[type=marker,distance=..1,tag=merchant.villager_marker] merchantTraderXp matches 1..",
                                    "comparison": ">",
                                    "compare_to": 0
                                }
                            ]
                        },
                        "if_action": {
                            "type": "origins:execute_command",
                            "command": "function merchantpug:villager/transfer_scores/setup_zombie_scores"
                        }
                    }
                ]
            }
        }
    }
}